<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dev_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <com.main.activity.KhonKaenZoo.SquareFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageview_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7C8BC34A"
                android:scaleType="centerCrop" />
        </com.main.activity.KhonKaenZoo.SquareFrameLayout>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_border_settings"
            android:padding="20dp"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:theme="@style/Theme.AppCompat" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hogdeer_button"
            android:layout_width="298dp"
            android:layout_height="201dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:src="@drawable/developer"
            app:civ_border_color="#FF000000"
            app:civ_border_width="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/text_border_settings"
            android:text="=>นายธวัชชัย ยาโงะ\n=>รหัสนักศึกษา 71700619M\n=>คณะวิศวกรรมศาสตร์\n=>สาขาคอมพิวเตอร์\n=>MIT pune under SPPU"
            android:textColor="#000000"
            android:elevation="5dp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp" />

    </LinearLayout>
</ScrollView>
